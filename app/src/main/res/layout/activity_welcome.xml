<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.WelcomeActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.828"
        app:srcCompat="@drawable/qidongye" />

    <RelativeLayout
        android:id="@+id/rl_xieyi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#30000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:paddingTop="30dp"
            android:layout_centerInParent="true"
            android:background="@drawable/shape__02_3"
            >
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"

               
               >
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="服务协议和隐私政策"
                   android:textColor="#000000"
                   android:layout_gravity="center_horizontal"
                   android:textSize="18sp"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="请你务必审慎阅读、充分理解“服务协"
                   android:textColor="#555555"
                   android:layout_marginTop="14dp"
                   android:layout_marginLeft="24dp"
                   android:layout_marginRight="24dp"
                   android:textSize="15sp"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="议”和“隐私政策”各条款。"
                   android:textColor="#555555"
                   android:textSize="15sp"
                   android:layout_marginLeft="24dp"
                   android:layout_marginRight="24dp"
                   android:layout_marginTop="8dp"
                   />
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginLeft="24dp"
                   android:layout_marginRight="24dp"
                   android:layout_marginTop="8dp"
                   >

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="您可阅读"
                       android:textColor="#555555"
                       android:textSize="15sp"
                       />
                   <TextView
                       android:id="@+id/tv_xieyi"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="《服务协议》"
                       android:textColor="#0099ff"
                       android:textSize="15sp"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="和"
                       android:textColor="#555555"
                       android:textSize="15sp"
                       />
                   <TextView
                       android:id="@+id/tv_zhengce"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="《隐私政策》"
                       android:textColor="#0099ff"
                       android:textSize="15sp"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="了解"
                       android:textColor="#555555"
                       android:textSize="15sp"
                       />
               </LinearLayout>


               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="详细信息。如您同意，请点击“同意”开始接"
                   android:textColor="#555555"
                   android:layout_marginLeft="24dp"
                   android:layout_marginRight="24dp"
                   android:textSize="15sp"
                   android:layout_marginTop="8dp"
                   />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="受我们的服务。"
                   android:layout_marginLeft="24dp"
                   android:layout_marginRight="24dp"
                   android:textColor="#555555"
                   android:textSize="15sp"
                   android:layout_marginTop="8dp"
                   />
               <View
                   android:layout_width="match_parent"
                   android:layout_height="0.75dp"
                   android:layout_marginTop="8dp"
                   android:background="@color/line_gray"
                   />
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="40dp"
                   android:weightSum="2"
                   android:orientation="horizontal"
                   >
                   <Button
                       android:id="@+id/btn_no"
                       android:layout_width="0dp"
                       android:layout_height="40dp"
                       android:layout_weight="1"
                       android:background="@color/white"
                       android:text="不同意"
                       android:textSize="18sp"
                       android:textColor="@color/gray_btn_bg_color"
                       />
                   <View
                       android:layout_width="0.75dp"
                       android:layout_height="20dp"
                       android:layout_gravity="center_vertical"
                       android:background="@color/gray_btn_bg_color"
                       />
                   <Button
                       android:id="@+id/btn_ok"
                       android:layout_width="0dp"
                       android:layout_height="40dp"
                       android:layout_weight="1"
                       android:background="@color/white"
                       android:text="同意"
                       android:textSize="18sp"
                       android:textColor="#0099ff"
                       />
               </LinearLayout>



           </LinearLayout>


        </RelativeLayout>


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>